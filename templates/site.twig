{% block injectJS %}
<script src="/assets/bootstrap-wysiwyg/jquery.hotkeys.js"></script>
<script src="/assets/bootstrap-wysiwyg/bootstrap-wysiwyg.js"></script>

<script id="ajax" type="text/javascript">
var $modal = null;
$('#btn-notepad').on('click', function(){
	if ($modal==null)
	{
			$modal = $('#ajax-modal');
			$modal.on('hidden', function () {
				{% if (auth.user.isdemo==0) %}
    			var jqxhr = $.post("{{ urlFor('profile.save.notes') }}", 
    					$('#editor').html())
    				.done(function() {})
    				.fail(function() { ; })
    				.always(function() { });
				{% endif %}
				
    		}).find('div#editor').load(
					"{{ urlFor('profile.save.notes') }}", "", 
					function(){
						{% if (auth.user.isdemo==0) %}
						$('#editor').wysiwyg();
						{% endif %}
		    		});	
    }
	$modal.modal({
		maxHeight: "300px",
		keyboard: false,
		backdrop: "static"
		});
});



</script>	
{% endblock %} 

