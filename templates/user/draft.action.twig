{% extends "site.twig" %} 

{% block title %}Drafts{% endblock %} 
{% block subheader %}<hr>Manage your drafts for {{ task.name }}{% endblock %} 


{% block bccontainer %}		
	{% include "widgets/breadcrumb.task.twig" %}
{% endblock %}

{% block content %}

<div class="row-fluid">
<div class="span12">
		<div class="widget widget-review">
			<div class="widget-header">
				<h1>Actions</h1>
			</div>
			<div class="widget-content"> 
			
			<a class="btn btn-large" title="Go to the drafts for this assignment"
				href="{{ urlFor('me.draft.action',{"idt":task.id}) }}">
				<i class="icon-large icon-desktop"></i> Show the last draft</a>
			
			<a class="btn btn-large" title="Go to the drafts for this assignment"
				href="{{ urlFor('me.draft.submit',{"idt":task.id}) }}">
				<i class="icon-large icon-upload-alt"></i> Analyse a new draft</a>

			
			<a class="btn btn-large" title="Go to the drafts for this assignment"
				href="{{ urlFor('me.draft.history',{"idt":task.id}) }}">
				<i class=" icon-large icon-archive"></i> Show the draft history</a>
			
	
			
					
				
			</div>
		</div>
	</div>	
</div>


<div class="row-fluid"><div class="span12">
<div class="widget" id="demo-trigger" data-toggle="collapse" data-target="#demo" style="cursor: pointer;">
			<div class="widget-header" title="Expand or collapse the details">
				<h1>Show Assignment information</h1>
				<div class="box-icon">
					<a class="btn-setting" ><i class="icon-chevron-down"></i></a>
				</div>
			</div>
			</div> 

</div></div>

<div class="row-fluid collapse" id="demo">
	<div class="span2">
		<div class="widget">
			<div class="widget-header">
			<h2> {{ group.name }}</h2>
			</div>
			<div class="widget-content"> 
					<p> 
					{{ group.description|length > 90 ? group.description|slice(0, 90) ~ '...' : group.description  }}</p>
				</div> 
		</div>
	</div>
	<div class="span8">
		<div class="widget">
			<div class="widget-header">
			<h2> Assignment</h2>
			</div>
			<div class="widget-content"> 
					<p>{{ task.assignment|nl2br}} </p>
				</div> 
		</div>
	</div>
	<div class="span2">
		<div class="widget">
			<div class="widget-header">
			<h2> Deadline </h2>
			</div>
			<div class="widget-content"> 
					<p>{{ task.deadline}}</p>
			</div> 
		</div>
		<div class="widget">
			<div class="widget-header">
				<h2> Word Limit</h2>
			</div>
			<div class="widget-content"> 
				<p>{{ task.wordcount}}</p>
			</div> 
		</div>
	</div>	
</div>

{% endblock %}