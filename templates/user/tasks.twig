{% extends "site.twig" %} 

{% block title %}Assignments{% endblock %} 
{% block subheader %}Your Assignments{% endblock %} 


{% block bccontainer %}		
	{% include "widgets/breadcrumb.task.twig" with {'navsrc': 'me.tasks'} %}
{% endblock %}


{% block injectCSS %}
	{{ parent() }}
<style>
td .btn{white-space: nowrap;}
 
</style>
{% endblock %}

{% block content %}

<div class="row-fluid">
	<div class="span12">
		<div class="widget">
			<div class="widget-header">
				<h2>Assignments in the course {{ group.name }}</h2>
			</div>
			<div class="widget-content"> 
				<p>These are the assignments (TMAs) that are available for you to use and analyse your drafts.</p>
							
				{% for task in tasks %}
				<div class="row-fluid" style="border:1px solid #D5D5D5; margin: 10px 0; ">
					<div class="span3" style="padding:5px;">
						<a 	class="span12 btn btn-large" style="line-height: 60px;" title="Go to this assignment"
							rel="tooltip" data-placement="bottom"
							href="{{ urlFor('me.draft.action',{"idt":task.id}) }}"><i class="icon-book icon-large"></i> {{ task.name }}</a>
					</div>
					<div class="span7" style="padding:5px; ">
						<p>{{ task.assignment }}</p>
					</div>
					<div class="span2" style="padding:5px;">
						<div class="row-fluid" style="padding:5px 0;">
							<div class="span12" >
								<p><span><b>Draft analysed:</b></span>
								<br class="hidden-phone hidden-tablet"/>
									<span class="badge badge-info">{{ task.draftcount }}</span>
								</p>
						
						</div></div>
						<div class="row-fluid" style="padding:5px 0;">
							<div class="span12" >
								<span><b>Deadline:</b> </span>
								<br class="hidden-phone hidden-tablet"/>
								<span>{{ task.deadline }}</span>
								<br/>
							
																
								<div class="well" style="padding: 4px;">
									<span style="display: table-cell;">
									<span class="icon-stack  icon-large"  title="{{ task.isopen? 'This is assignment is open' : 'this is assignment is closed' }}">
		  								<i class="{{ task.isopen? 'icon-circle  icon-stack-base' : 'icon-ban-circle icon-stack-base text-error  icon-flip-vertical' }}"></i>
		  								<i class="{{ task.isopen? 'icon-pencil icon-light' : 'icon-pencil' }}"></i>
									</span></span>
									<span class="small" style="display: table-cell;">{{ task.isopen? 'This assignment is open' : 'this assignment is closed' }}</span>
								</div>	
							
								
							</div>
						</div>
					</div>
				</div>
				{% endfor %}
			</div> 
		</div>
	</div>	

		
		
	
</div>
{% endblock %}