{% extends "site.twig" %} 

{% block title %}Assignments{% endblock %} 
{% block subheader %}Your Assignments{% endblock %} 


{% block bccontainer %}		
	{% include "widgets/breadcrumb.task.twig" with {'navsrc': 'me.tasks'} %}
{% endblock %}


{% block injectCSS %}
	{{ parent() }}
<style>
td .btn{white-space: nowrap;}
 
</style>
{% endblock %}

{% block content %}

<div class="row-fluid">
	<div class="span12">
		<div class="widget">
			<div class="widget-header">
				<h3>Assignments in the course {{ group.name }}</h3>
			</div>
			<div class="widget-content"> 
				<p>You are a member of the <b>{{ group.name }}</b> group. <br>
				Below are the assignments (TMAs) that are available for you to use and analyse your drafts.</p>
				<table class="table table-condensed table-striped table-bordered">
				<thead>
					<tr>
						
						<th>Name</th>
						<th>Assignment</th>
						<th>Deadline</th>
						<th>Drafts Analysed</th>
		
						
					</tr>
				</thead>
				<tbody>
					{% for task in tasks %}
					
					<tr>
					
					<td><a class="btn btn-large" title="Go to this assignment"
						rel="tooltip" data-placement="bottom"
							href="{{ urlFor('me.draft.action',{"idt":task.id}) }}"><i class="icon-book icon-large"></i> {{ task.name }}</a></td>
					<td>{{ task.assignment }}</td>
					<td>{{ task.deadline }}<br>
					
						<span class="icon-stack  icon-large" title="{{ task.isopen? 'This is assignment is open' : 'this is assignment is closed' }}">
  							<i class="{{ task.isopen? 'icon-circle  icon-stack-base' : 'icon-ban-circle icon-stack-base text-error  icon-flip-vertical' }}"></i>
  							<i class="{{ task.isopen? 'icon-pencil icon-light' : 'icon-pencil' }}"></i>
						</span>
					
					</td>
					<td><span class="badge">{{ task.draftcount }}</span></td>

				
					</tr>
					{% endfor %}
				</tbody>
				</table>
			
			</div> 
		</div>
	</div>	

		
		
	
</div>


{% endblock %}