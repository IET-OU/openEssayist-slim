    <![endif]-->

	<!-- Le fav and touch icons -->
	<link rel="shortcut icon" href="/assets/openessayist/img/favicon.ico">
	<style>
	/* Sticky footer styles
      -------------------------------------------------- */
	html,body {
        height: 100%;
        /* The html and body elements cannot have any padding or margin. */
      }

      /* Wrapper for page content to push down footer */
      #wrap {
        min-height: 100%;
        height: auto !important;
        height: 100%;
        /* Negative indent footer by it's height */
        margin: 0 auto -40px;
      }

      /* Set the fixed height of the footer here */
      #push {
        height: 30px;
      }
      
      footer.footer {
        height: 29px;
      }
      
      /* Custom page CSS
      -------------------------------------------------- */
      /* Not required for template or sticky footer method. */

      .container .credit {
        margin: 20px 0;
      }

      code {
        font-size: 80%;
      }
      
	</style>
{% endblock %}
</head>
<body>
	<div id="wrap">
	{% block navbar %}
		{% include "widgets/navbar.panel.twig" %}
	{% endblock %}

	
	<!-- Content ================================================== -->
	<div class="container" id="main">
	
		
		{% block breadcrumb %}
		<div class="breadcrumb">
			<ul class="breadcrumb">{% block bccontainer %}{% endblock %}</ul>
			<h1 class="subdhead">{% block subheader %}{% endblock %}</h1>
			<div class="navbarhead">{% block navsubheader %}{% endblock %}</div>
			</div>
		{% endblock %}
		
		<div class="row-fluid">
			<div class="span12" style="min-height: 150px;">
			
			{% block notification %}
				<div class="row-fluid">
					<div class="span10 offset1" id="notification">{% if flash.info %}
						<div class="alert-box alert alert-info">{{ flash.info|raw }}</div>
					{% endif %}{% if flash.error %}
						<div class="alert-box alert alert-error">{{ flash.error|raw }}</div>
					{% endif %}{% if flash.tutor %}
						<div class="alert-block alert alert-success">
							<button type="button" class="close" data-dismiss="alert">&times;</button>
							<h4>Help on the task</h4>
							<hr>
							{{ flash.tutor|raw }}
						</div>
					{% endif %}</div>
				</div>
			{% endblock %}
			
			{% block content %}{% endblock %}
			</div>
			
			
		</div>
		
		{% block debug %}{% endblock %}
		
	</div>
	<div id="push"></div>
</div>
	{% block toolcontainer %}
	{% endblock %}
	
	
	<!-- Footer ================================================== -->
	<footer class="footer">
		<div class="container">
		{% block footer %}
			<p class="pull-right">
				<a href="#">Back to top</a>
			</p>
			<p>openEssayist v2.2 - Designed and built with all the love in the world by <a
					href="https://github.com/vanch3d" target="_blank"><img
					alt="GitHub" src="/assets/openessayist/img/github.jpg">vanch3d</a>.
			</p>
		{% endblock %}			
		</div>
	</footer>
	
	
	
		<!-- Le javascript
    ================================================== -->
