    id="openessayist-js-config"
    data-openessayist='{}'
    data-user_isdemo="{{ auth.user.isdemo ? 'true' : 'false' }}"
    data-profile_save_notes="{{ urlFor('profile.save.notes') }}"
    data-log_url="{{ urlFor('ajax.log.activity') }}"
    data-google_analytics="{{ 'google_analytics' | config }}"
    data-analytics_prefix="{{ 'analytics_prefix' | config }}"
    ></script>

