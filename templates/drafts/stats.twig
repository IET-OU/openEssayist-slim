{% extends "site.twig" %} 

{% block title %}Draft - Statistics{% endblock %} 

{% block bccontainer %}		
	{% include "widgets/breadcrumb.task.twig" %}
{% endblock %}

{% block content %}

<div class="row-fluid">
	<div class="span6">
	
		<div class="widget">
			<div class="widget-header">
				<h3> Group: Essay</h3>
			</div>
			<div class="widget-content"> 
				<table class="table table-condensed table-striped table-bordered">
				<tbody>
				{% for key,item in stats.se_stats %}
				<tr>
					<td>{{ key }}</td>
					<td>{{ item }}</td>
					<td></td>
				</tr>
				{% endfor %}
				</tbody>
				</table>
			</div> 
		</div>
	</div>
	<div class="span6">
		
		<div class="widget">
			<div class="widget-header">
				<h3> Group: Keywords</h3>
			</div>
			<div class="widget-content"> 
				<table class="table table-condensed table-striped table-bordered">
				<tbody>
				{% for key,item in stats.ke_stats %}
				<tr>
					<td>{{ key }}</td>
					<td>{{ item }}</td>
					<td></td>
				</tr>
				{% endfor %}
				</tbody>
				</table>
			</div> 
		</div>
		
	</div>
</div>

<div class="row-fluid">
	<div class="span12">
		{% for key,struct in stats.structure %}
		<div class="widget">
			<div class="widget-header">
				<h3> Group: {{ key }}</h3>
			</div>
			<div class="widget-content"> 
				<table class="table table-condensed table-striped table-bordered">
				<tbody>
				{% for keys,item in struct %}
				<tr>
					<td>{{ keys }}</td>
					<td>{{ item|boolean}}</td>
					<td></td>
				</tr>
				{% endfor %}
				</tbody>
				</table>
			</div> 
		</div>
		{% endfor %}
	</div>
</div>


{% endblock %}