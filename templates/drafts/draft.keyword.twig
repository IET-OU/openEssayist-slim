	        	    			$('<span />',{ "text": forms})));
	        		}

	    			{% if auth.user.isadmin and false %}
	    			$r2 = $('<div />').addClass("pop-line").appendTo($newDiv);
					$r2.append($('<div />',{ "text": "Centrality:", "class": "pop-title"}));
					$r2.append($('<div />',{ "class": "pop-desc"}).append(
	    	    			$('<span />',{"class": 'inlinebar bartodo',"text":score})));

	    			$r2 = $('<div />').addClass("pop-line").appendTo($newDiv);
