{% extends "site.twig" %} 

{% block title %}Feedback{% endblock %} 
{% block breadcrumb %}{% endblock %}

{% block content %}

<div class="row-fluid"><div class="span12">
	<div class="widget">
		<div class="widget-header">
			<h2> Feedback Form </h2>
		</div>
		<div class="widget-content clearfix " >
		
<div>

<p class="lead">Help us to improve <span class="brand openessayist">openEssayist</span>.</p>
<p>The system you are currently using is a research prototype and under constant development. 
If you came across any issue you would like to see changed or improved, please let us know by leaving a message below.</p>
<p>Please note that, although we will be monitoring your comments, we will not necessarily reply to them.</p>
</div>

		
		
<form method="post" class="">

<fieldset>

<div class="control-group">
	<label for="feedback-text" class="control-label">Your comments:</label>
	<div class="controls">
		<textarea class="boxborder" rows="15" 
			name="text" id="feedback-text" placeholder="type your feedback here"
			required="required">{{ form.text }}</textarea>			
			
	</div>
</div>

<input type="hidden" name="referer" id="feedback-referer"
			{{ form.referer ? "value="~form.referer}}>

</fieldset>

<div class="form-actions">
	<button class="btn btn-primary" id="consent-submit" type="submit">Send the report</button> 
</div>
								
</form>	
		
		
		</div>
	</div>
</div></div>
{% endblock %}

{% block injectCSS %}
	{{ parent() }}
<style>
	.boxborder {
    -webkit-box-sizing: border-box;
       -moz-box-sizing: border-box;
            box-sizing: border-box;
              resize: vertical;
    width: 100%;
}
</style>
{% endblock %}

{% block injectJS %}
	{{ parent() }}
{% endblock %}