{% extends "site.twig" %} 

{% block title %}Admin / Users {% endblock %} 

{% block content %}
<div class="row-fluid">
	<div class="span3">
	<div class="widget">
		<div class="widget-header">
		<h3>User Action</h3>
		</div>
		<div class="widget-content"> 
				<p> </p>
			</div> 
	</div>
	
	<div class="widget">
		<div class="widget-header">
		<h3>Group Action</h3>
		</div>
		<div class="widget-content"> 
				<p> </p>
			</div> 
	</div>
	</div>

<div class="span9">
	
	{% for item in data %}
		<div class="widget">
			<div class="widget-header">
				<h3>{{ item.group.name }}</h3>
			</div>
			<div class="widget-content"> 

				<table class="table table-condensed table-striped table-bordered">
				<thead>
					<tr>
						<th width="5%">#</th>
						<th>ID</th>
						<th>Name</th>
						<th>Email</th>
						<th>IP Address</th>
						<th>Active</th>
						<th class="td-actions">Drafts</th>
					</tr>
				</thead>
				<tbody>
					{% for user in item.users %}
					<tr class={{ user.isadmin? "info" : ""}}>
					<td><code>{{ user.id }}</code></td>
					<td>{{ user.username }}</td>
					<td>{{ user.name }}</td>
					<td>{{ user.email }}</td>
					<td>{{ user.ip_address }}</td>
					<td>{% if user.active %}<i class="icon-check"></i>{% endif %}
					<td><span class="badge {{ user.drafts?'badge-info' }}">{{ user.drafts?:""}}</span></td>
				
					</tr>
					{% endfor %}
				</tbody>
				</table>
			
			</div> 
		</div>
	{% endfor %}
	</div>
</div>


{% endblock %}