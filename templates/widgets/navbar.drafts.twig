			<li class="{{ navsrc == 'me.draft.sentence' ? 'active' }}"><a
				href="{{ urlFor('me.draft.sentence',{"draft":draft.id}) }}"><i
					class="icon-large icon-tag"></i><span class="hidden-phone hidden-tablet"> Sentences</span></a> {% if
				auth.user.isadmin %}
			
			<li class="{{ navsrc == 'me.draft.stats' ? 'active' }}"><a
				href="{{ urlFor('me.draft.stats',{"draft":draft.id}) }}"><i
					class="icon-large icon-info-sign"></i><span class="hidden-phone hidden-tablet"> Stats</span></a> {% endif %}
					
			
			
			<li class="dropdown {{ 'me.draft.view.' in navsrc ? 'active' }}"><a class="dropdown-toggle"
