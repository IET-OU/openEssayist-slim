{% block bccontainer %} 

{% if 'me.home' != navsrc  %}
<li><a title="Go back to your homepage"
		href="{{ urlFor('me.home') }}"><i class="icon-home icon-large"></i>
		<span class="hidden-phone hidden-tablet">Dashboard</span></a>

</li>
{% else %}
<li class="active"><i class="icon-home icon-large"></i>
		<span class="hidden-phone hidden-tablet">Dashboard</span>

</li>
{% endif %}

{% if task is defined or navsrc=='me.tasks'%}
<li><span class="divider"><i class="icon-angle-right icon-large"></i></span>
	<a title="Go back to your assignments"
		href="{{ urlFor('me.tasks') }}"><i class="icon-folder-open icon-large"></i>
		<span class="hidden-phone">Assignments</span></a> 
</li>
{% endif %}

{% endblock %}
