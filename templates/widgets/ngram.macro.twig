{% macro toBtn(ngram,showScore=false,userdefined=false) %}
	<a class="btn btn-large btn-ngram {{ userdefined?"btn-warning":"" }}" id="{{ ngram.ngram|join("") }}">
	
		<span>{{ ngram.ngram|join(" ") }}</span>
		<span class="label label-info">{{ ngram.count }}</span>
		{% if showScore %}
			<span class="inlinebar">{{ ngram.score|join(',') }}</span>
		{% endif %}
	</a>
{% endmacro %}

{% macro toBtnString(ngram,showScore=false,userdefined=false) %}\
	<a class='btn btn-large btn-ngram {{ userdefined?"btn-warning":"" }}' id="+{{ ngram|raw }}.ngram+">\
		<span class='label label-info'>"+{{ ngram|raw }}.count+"</span>\
		<span>"+{{ ngram|raw }}.ngram+"</span>\
	</a>\
{% endmacro %}