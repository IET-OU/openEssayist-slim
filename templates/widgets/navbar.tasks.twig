<div class="navbar">
    <div class="navbar-inner">
    	<span class="brand" >{{ task.name }}</span>
    	<ul class="nav">
 			<li class="{{ navsrc == 'me.draft.action' ? 'active' }}">
 				<a 	href="{{ urlFor('me.draft.action',{"idt":task.id}) }}" 
 					title="Overview of your progress on this assignment"
 					rel="tooltip" data-placement="bottom">
				<i class="icon-large icon-desktop"></i> 
				<span class="hidden-phone ">Review</span>
			</a></li>
			{% if task.isopen %}
    		<li class="{{ navsrc == 'me.draft.submit' ? 'active' }}">
    			<a href="{{ urlFor('me.draft.submit',{"idt":task.id}) }}"  
    				title="Analyse a new draft for this assignment"
					rel="tooltip" data-placement="bottom">
				<i class="icon-large icon-upload-alt"></i>
				<span class="hidden-phone ">New draft</span>
			</a></li>
			{% endif %}
    		<li class="{{ navsrc == 'me.draft.history' ? 'active' }}">
    			<a href="{{ urlFor('me.draft.history',{"idt":task.id}) }}" 
    				title="Show all the drafts analysed for this assignment"
    				rel="tooltip" data-placement="bottom">
				<i class=" icon-large icon-archive"></i>
				<span class="hidden-phone ">History</span>
			</a></li>
    	</ul>
    </div>
</div>